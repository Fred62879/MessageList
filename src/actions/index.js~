export const increment = amount => {
    return {
        type: 'INCREMENT_COUNTER',
        increment: amount
    };
}

export const load = txt => {
    return {
        type: 'MESS_INPUT',
        input: txt
    };
}

export const store = txt => {
    return {
        type: 'MESS_STORE',
        newmess: txt
    };
}

export const display = display => {
    return {
        type: 'MESS_DISPLAY',
        display: display
    };
}

export const clear = clear => {
    return {
	type: 'MESS_CLEAR',
	clear: clear
    };
}
